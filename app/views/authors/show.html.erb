<h1>
<%= @author.name + "  (b. " + @author.birth_year.to_s + ")"%>
</h1>

<br>

<label>Books:</label>
<ul>
  <% @author.books.each do |b| %>
  <li> <%=link_to b.title, book_path(b.id)%></li>
  <% end %>
</ul>

<%= link_to "Edit #{@author.name}", author_path(@author) %>
<%= button_to "Delete #{@author.name}", author_path(@author), method: :delete%>
